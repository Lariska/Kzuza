extends layout
block content
   div.content.large_page.take_order
      h1 בר סלטים
      img.logo(src="static/images/logo.jpg")
      h2 קבלת הזמנה
      form(dir="rtl", action="/payment_method", method="post", data-abide)
         .row
            .switch.round.medium-2.right
               input(id="take_away",type="radio",name="send_choise",checked)
               label(for="take_away")
               h6 עיסוף עצמי <br/>(Take-away)
            .switch.round.medium-2.right
               input(id="send_home",type="radio",name="send_choise")
               label(for="send_home")
               h6 משלוח עד הבית
         .row
            .medium-3.right
               select(name="city")
                  each city, index in cities
                     option(value=index) #{city}
               small.error
                  שדה חובה
            .medium-3.right
               input(type="text", placeholder="רחוב", name="street", required)
               small.error
                  שדה חובה
            .medium-2.right
               input(type="text", placeholder="מספר בית", name="house_number", required)
               small.error
                  שדה חובה
         .row
            .medium-4.right
               input(type="text", placeholder="מספר דירה / שם החברה", name="apartment_number")
            .medium-4.right
               input(type="text", placeholder="קומה", name="floor" )
         .row
            .medium-9.right
               textarea(placeholder="הערות לשליח", name="comments")
         .row
            .medium-6.centered
               button.button(dir="rtl", type='submit') המשך
