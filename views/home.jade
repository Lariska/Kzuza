extends layout
block content
    div.myContent
        h1 בר סלטים
        img.logo(src="/images/logo.jpg")
        form(action='/auth/login/', method='post')
            div.row
                div.large-4.columns.myColumns
                    label
                        input(name="username", type='text', placeholder='שם משתמש', dir="rtl")
            div.row
                div.large-4.columns.myColumns
                    label
                        input(name="password", type='password', placeholder="סיסמה", dir="rtl")
                        a(dir="rtl", href="/auth/forget_password") שכחת סיסמה?&nbsp;
                        a(dir="rtl", href="/auth/signup") משתמש חדש?
                        //small.error שם משתמש או סיסמה לא נכונים
                        br
            div.row.center
                button.button(dir="rtl", type='submit') כניסה
            div.row.center
                a.button.alert(dir="rtl", href="/auth/google") התחבר באמצעות Gamil
            div.row.center
                a.button.facebook(dir="rtl", href="/auth/facebook") התחבר באמצעות Facebook