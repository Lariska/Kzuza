extends layout
block content
    div.content
        h1 בר סלטים
        img(src="static/images/logo.jpg")
        form(action='/signup', method='post', data-abide)
            .row
                .large-4.columns
                    label
                        input(name="username", type='text', placeholder="שם משתמש חדש", dir="rtl", required="required")
                    small.error
                        שדה חובה
            .row
                .large-4.columns
                    label
                        input(name="phone_number", type='text', placeholder="מספר פלאפון", dir="rtl")

            .row.password-field
                .large-4.columns
                    label
                        input(name="password", type='password', id='password', placeholder="סיסמה", dir="rtl", required="required")
                    small.error
                        שדה חובה
            .row.password-confirmation-field
                .large-4.columns
                    label
                        input(name="repeat_password", type='password', placeholder="וידוי סיסמה", dir="rtl", required="required", data-equalto="password")
                    small.error
                        הסיסמה לא תואמת
            .row.center
                button.button(dir="rtl", type='submit') הרשמה
